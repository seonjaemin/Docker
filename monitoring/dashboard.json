{
  "title": "cAdvisor â€” Docker Containers (Now Works)",
  "schemaVersion": 38,
  "version": 3,
  "refresh": "10s",
  "timezone": "browser",
  "tags": ["cadvisor", "docker", "prometheus"],
  "templating": {
    "list": [
      {
        "name": "container",
        "label": "Container",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "query": "label_values({job=\"cadvisor\"}, name)",
        "current": {}
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Running containers",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "count(container_last_seen{job=\"cadvisor\", name=~\"$container\"})" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Total CPU usage (cores x sec/sec)",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\", name=~\"$container\"}[1m]))" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Total Memory Working Set",
      "id": 3,
      "datasource": "Prometheus",
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "targets": [
        { "refId": "A", "expr": "sum(container_memory_working_set_bytes{job=\"cadvisor\", name=~\"$container\"})" }
      ],
      "gridPos": { "h": 4, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "CPU usage (per container)",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        { "refId": "A", "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{job=\"cadvisor\", name=~\"$container\"}[1m]))" }
      ],
      "legend": { "displayMode": "table", "showLegend": true },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
    },
    {
      "type": "timeseries",
      "title": "Memory Working Set (bytes)",
      "id": 5,
      "datasource": "Prometheus",
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "targets": [
        { "refId": "A", "expr": "container_memory_working_set_bytes{job=\"cadvisor\", name=~\"$container\"}" }
      ],
      "legend": { "displayMode": "table", "showLegend": true },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 }
    },
    {
      "type": "timeseries",
      "title": "Network RX/TX (bytes/sec)",
      "id": 6,
      "datasource": "Prometheus",
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "targets": [
        { "refId": "A", "expr": "sum by (name) (irate(container_network_receive_bytes_total{job=\"cadvisor\", name=~\"$container\"}[1m]))" },
        { "refId": "B", "expr": "sum by (name) (irate(container_network_transmit_bytes_total{job=\"cadvisor\", name=~\"$container\"}[1m]))" }
      ],
      "legend": { "displayMode": "table", "showLegend": true },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 }
    },
    {
      "type": "timeseries",
      "title": "Filesystem usage (bytes)",
      "id": 7,
      "datasource": "Prometheus",
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "targets": [
        { "refId": "A", "expr": "sum by (name) (container_fs_usage_bytes{job=\"cadvisor\", name=~\"$container\"})" }
      ],
      "legend": { "displayMode": "table", "showLegend": true },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 }
    }
  ]
}
